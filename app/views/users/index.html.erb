<div class="header">
  <h1 class="title">Leaderboard</h1>
  <%= link_to 'Add New User', new_user_path, class: "new-user-link" %>
</div>
<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Country</th>
      <th>XP</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.country %></td>
        <td><%= user.xp %></td>
      </tr>
    <% end %>
  </tbody>
</table>
